{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string"
    },
    "uamiName": {
      "type": "string"
    },
    "federatedCredentialName": {
      "type": "string",
      "defaultValue": "aws-oif"
    },
    "subject": {
      "type": "string",
      "metadata": {
        "description": "AWS IAM role ARN allowed to federate into Azure. Example: arn:aws:iam::123456789012:role/MyRole"
      }
    }
  },
  "variables": {
    "effectiveLocation": "[deployment().location]",
    "readerRoleDefinitionId": "acdd72a7-3385-48ef-bd42-f606fba81ae7",
    "awsIssuer": "https://sts.amazonaws.com",
    "azureAudience": "api://AzureADTokenExchange"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2022-09-01",
      "name": "[parameters('resourceGroupName')]",
      "location": "[variables('effectiveLocation')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2022-09-01",
      "name": "rg-scoped-resources",
      "dependsOn": [
        "[resourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "parameters": {
          "location": { "value": "[variables('effectiveLocation')]" },
          "uamiName": { "value": "[parameters('uamiName')]" },
          "ficName": { "value": "[parameters('federatedCredentialName')]" },
          "subject": { "value": "[parameters('subject')]" }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "location": { "type": "string" },
            "uamiName": { "type": "string" },
            "ficName": { "type": "string" },
            "subject": { "type": "string" }
          },
          "variables": {
            "readerRoleDefinitionId": "acdd72a7-3385-48ef-bd42-f606fba81ae7",
            "awsIssuer": "https://sts.amazonaws.com",
            "azureAudience": "api://AzureADTokenExchange"
          },
          "resources": [
            {
              "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
              "apiVersion": "2023-01-31",
              "name": "[parameters('uamiName')]",
              "location": "[parameters('location')]"
            },
            {
              "type": "Microsoft.ManagedIdentity/userAssignedIdentities/federatedIdentityCredentials",
              "apiVersion": "2023-01-31",
              "name": "[format('{0}/{1}', parameters('uamiName'), parameters('ficName'))]",
              "dependsOn": [
                "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName'))]"
              ],
              "properties": {
                "issuer": "[variables('awsIssuer')]",
                "subject": "[parameters('subject')]",
                "audiences": [
                  "[variables('azureAudience')]"
                ]
              }
            },
            {
              "type": "Microsoft.Authorization/roleAssignments",
              "apiVersion": "2022-04-01",
              "name": "[guid(resourceGroup().id, variables('readerRoleDefinitionId'), reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName')), '2023-01-31').principalId)]",
              "dependsOn": [
                "[resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName'))]"
              ],
              "properties": {
                "roleDefinitionId": "[subscriptionResourceId('Microsoft.Authorization/roleDefinitions', variables('readerRoleDefinitionId'))]",
                "principalId": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName')), '2023-01-31').principalId]",
                "principalType": "ServicePrincipal"
              }
            }
          ],
          "outputs": {
            "principalId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName')), '2023-01-31').principalId]"
            },
            "clientId": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.ManagedIdentity/userAssignedIdentities', parameters('uamiName')), '2023-01-31').clientId]"
            }
          }
        }
      },
      "resourceGroup": "[parameters('resourceGroupName')]"
    }
  ],
  "outputs": {
    "effectiveLocation": {
      "type": "string",
      "value": "[variables('effectiveLocation')]"
    },
    "resourceGroupName": {
      "type": "string",
      "value": "[parameters('resourceGroupName')]"
    },
    "uamiClientId": {
      "type": "string",
      "value": "[reference('rg-scoped-resources').outputs.clientId.value]"
    },
    "uamiPrincipalId": {
      "type": "string",
      "value": "[reference('rg-scoped-resources').outputs.principalId.value]"
    }
  }
}
